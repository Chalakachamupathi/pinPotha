<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asak.pro.pinPotha"

    android:versionCode="5"
    android:versionName="2.2"
    >


    <uses-sdk android:minSdkVersion="8"


        />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="asak.pro.pinPotha.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="asak.pro.pinPotha.SampleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="asak.pro.pinPotha.SAMPLEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="asak.pro.pinPotha.DisplayImageActivity" />
        <activity android:name="asak.pro.pinPotha.about" />
        <activity android:name="asak.pro.pinPotha.help" />
    </application>

</manifest>
